<%- include("partials/header") %>
<section class="heading">
  <h1>global covid statistics</h1>
  <h3>Last Updated : <%= Date().slice(0,15) %></h3>
</section>

<div class="container">
  <% if(disp.length == 0){ %>
    <section class="globalData">
      <div class="row">
        <div class="col-md-4">
          <blockquote id="Confirmed">
            <h4><i class="fas fa-head-side-cough"></i> Infected</h4>
            <p>Global Cases : <%= data.global.TotalConfirmed %></p>
            <p>New Cases : <%= data.global.NewConfirmed %></span></p>
          </blockquote>
        </div>
        <div class="col-md-4">
          <blockquote id="Recovered">
            <h4><i class="fas fa-hospital-user"></i> Recovered</h4>
            <p>Global Recoveries : <%= data.global.TotalRecovered %></span></p>
            <p>New Recoveries : <%= data.global.NewRecovered %></span></p>
          </blockquote>
        </div>
        <div class="col-md-4">
          <blockquote id="Death">
            <h4><i class="fas fa-skull-crossbones"></i> Deaths</h4>
            <p>Global Deaths : <%= data.global.TotalDeaths %></span></p>
            <p>New Deaths : <%= data.global.NewDeaths %></span></p>
          </blockquote>
        </div>
      </div>
    </section>
  <% }else{ %>
    <% data.Countries.forEach(function(ct){ %>
       <% if(ct.Country == disp[0].Country){ %>
        <section class="globalData">
          <h2 class="text-center"><%= ct["Country"] %> statistics:</h2>
          <div class="row">
            <div class="col-md-4">
              <blockquote id="Confirmed">
                <h4><i class="fas fa-head-side-cough"></i> Infected</h4>
                <p>Total Cases : <%= ct.TotalConfirmed %></p>
                <p>New Cases : <%= ct.NewConfirmed %></span></p>
              </blockquote>
            </div>
            <div class="col-md-4">
              <blockquote id="Recovered">
                <h4><i class="fas fa-hospital-user"></i> Recovered</h4>
                <p>Total Recoveries : <%= ct.TotalRecovered %></span></p>
                <p>New Recoveries : <%= ct.NewRecovered %></span></p>
              </blockquote>
            </div>
            <div class="col-md-4">
              <blockquote id="Death">
                <h4><i class="fas fa-skull-crossbones"></i> Deaths</h4>
                <p>Total Deaths : <%= ct.TotalDeaths %></span></p>
                <p>New Deaths : <%= ct.NewDeaths %></span></p>
              </blockquote>
            </div>
          </div>
        </section>
       <% } %>
    <% }); %>
  <% } %>

  <section class="countryrep">
    <div class="row justify-content-center">
      <div class="col-md-4">
        <form action="/country" method="POST">
          <select name="Country" onchange="form.submit()">
              <option>Select Country</option>
              <% data.Countries.forEach(function(ct){ %>
                  <option><%= ct.Country %></option>
              <% }); %>
          </select>
        </form>
      </div>
    </div>
  </section>

  <section>
    <div class="row mb-5">
      <div class="col-lg-12">
        <div id="map"></div>
      </div>
    </div>
  </section>
</div>

<%- include("partials/footer") %>